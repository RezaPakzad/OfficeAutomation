{
  "Logging": { // بخش تنظیمات لاگینگ پیش فرض ASP.NET Core
    "LogLevel": { // سطح لاگ برای انواع مختلف لاگرها
      "Default": "Information", // سطح پیش فرض برای همه لاگرها: Information
      "Microsoft.AspNetCore": "Warning" // سطح لاگ برای命名空间های مایکروسافت: Warning
    }
  },
  "AllowedHosts": "*", // تنظیمات CORS -允许所有هاست
  "ConnectionStrings": { // بخش رشته های اتصال به دیتابیس
    "DefaultConnection": "Server=.;Database=OfficeAutomation;Trusted_Connection=True;TrustServerCertificate=True;" // رشته اتصال به SQL Server با احراز هویت ویندوزی
  },
  "Serilog": { // بخش تنظیمات Serilog (لاگینگ پیشرفته)
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ], // تعیین سینک های مورد استفاده (Console و File)
    "MinimumLevel": { // تنظیم حداقل سطح لاگ
      "Default": "Information", // سطح پیش فرض: Information
      "Override": { // سطوح خاص برای命名空间های مختلف
        "Microsoft": "Warning", // برای所有空间های مایکروسافت: Warning
        "System": "Warning" // برای所有空间های سیستم: Warning
      }
    },
    "WriteTo": [ // تعیین مقاصد نوشتن لاگ ها
      {
        "Name": "Console" // نوشتن در کنسول
      },
      {
        "Name": "File", // نوشتن در فایل
        "Args": { // آرگومان های مربوط به سینک فایل
          "path": "Logs/log-.txt", // مسیر و الگوی نام فایل
          "rollingInterval": "Day", // ایجاد فایل جدید روزانه
          "retainedFileCountLimit": 7 // حداکثر تعداد فایل های نگهداری شده (7 روز)
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ] // اطلاعات اضافی به لاگ ها اضافه شود
  }
}